<section class="max-w-7xl mx-auto px-4 py-8 color-{{ section.settings.color_scheme }}">
  {% if product %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
      <!-- Media Viewer -->
      <media-viewer>
        <div class="flex flex-col items-start w-full">
          <!-- Main image with fallback -->
          <div class="w-full h-96 overflow-hidden rounded shadow">
            {% if product.featured_image %}
              <img
                id="mainImage"
                src="{{ product.featured_image | image_url: width: 800 }}"
                alt="Main product image"
                class="w-full h-full object-cover transition duration-300"
              >
            {% elsif settings.logo %}
              <img
                id="mainImage"
                src="{{ settings.logo | image_url: width: 800 }}"
                alt="Fallback logo image"
                class="w-full h-full object-cover transition duration-300"
              >
            {% else %}
              <img
                id="mainImage"
                src="{{ 'logo.png' | asset_url }}"
                alt="Default fallback logo"
                class="w-full h-full object-cover transition duration-300"
              >
            {% endif %}
          </div>

          <!-- Thumbnails (only if there are any) -->
          {% if product.media.size > 0 %}
            <div class="flex gap-2 mt-4 overflow-x-auto">
              {% for media in product.media %}
                <img
                  src="{{ media | image_url: width: 120 }}"
                  data-src="{{ media | image_url: width: 800 }}"
                  class="thumbnail w-20 h-20 rounded object-cover cursor-pointer hover:opacity-80 transition"
                  alt="Thumbnail {{ forloop.index }}"
                >
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </media-viewer>

      <!-- Product Info + Form -->
      <div>
        {% form 'product', product %}
          <div class="my-3">
            <span class="text-xs text-gray-500">{{ product.vendor }}</span>
          </div>
          <div class="my-3">
            <h1 class="text-3xl font-bold text-primary mb-2">{{ product.title }}</h1>
          </div>
          <div class="my-3">
            {% assign product_price = product.selected_or_first_available_variant %}
            <span class="text-xl text-secondary mb-4 line-through">{{ product_price.compare_at_price | money }}</span>
            <span class="text-xl text-secondary font-bold mb-4">{{ product_price.price | money }}</span>

            {% if product_price.price < product_price.compare_at_price %}
              <span class="px-5 py-1 text-sm font-bold bg-red-500 rounded-full text-white mx-4">Sale</span>
            {% endif %}
          </div>

          <div class="my-3">
            {% unless product.has_only_default_variant %}
              <div data-url="{{ product.url }}" data-section="{{ section.id }}">
                {% for option in product.options_with_values %}
                  <label for="Option-{{ section.id }}-{{ forloop.index0 }}">{{ option.name }}</label>
                {% endfor %}
              </div>
            {% endunless %}
          </div>

          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          <button
            type="submit"
            name="add"
            class="w-full mb-3 bg-[var(--color-button)] text-[var(--color-button-label)] font-semibold py-3 rounded hover:bg-opacity-90 transition"
            {% if product.selected_or_first_available_variant.available == false %}
              disabled
            {% endif %}
          >
            {% if product.selected_or_first_available_variant.available == false %}
              SOLD OUT
            {% else %}
              Add to Cart
            {% endif %}
          </button>

          {{ form | payment_button }}
        {% endform %}
      </div>
    </div>
    <div>
      {{ product.description }}
    </div>
  {% else %}
    <p class="text-subdued">No product found.</p>
  {% endif %}
</section>

{% schema %}
{
  "name": "Product Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Default Product"
    }
  ]
}
{% endschema %}
