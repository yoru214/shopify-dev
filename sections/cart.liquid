<section class='container mx-auto px-4 py-10 color-{{ section.settings.color_scheme }}'>
	<div class='flex justify-between items-center mb-6'>
		<h1 class='text-3xl font-bold text-primary'>Your Cart</h1>
		<a href='/collections/all' class='text-sm font-semibold text-[var(--color-button)] hover:underline'>
			Continue Shopping â†’
		</a>
	</div>

	{% if cart.item_count > 0 %}
		<form action='/cart' method='post' novalidate>
			<cart-table>
				{% render 'cart-table' %}
			</cart-table>

			<!-- Order Summary -->
			<div class='w-full max-w-md ml-auto mb-6 bg-gray-50 p-4 rounded border border-gray-200'>
				<h2 class='text-lg font-bold mb-4'>Order Summary</h2>
				<div class='flex justify-between text-sm mb-2'>
					<span>Subtotal</span>
					<span>{{ cart.total_price | money }}</span>
				</div>
				{% if shop.taxes_included or shop.shipping_policy.body != blank %}
					<div class='text-sm text-gray-500 mb-2'>Taxes and shipping calculated at checkout.</div>
				{% endif %}
			</div>

			<!-- Update & Checkout -->
			<div class='flex justify-end items-center gap-4'>
				<button
					type='submit'
					name='checkout'
					class='bg-[var(--color-button)] text-[var(--color-button-label)] font-semibold py-3 px-6 rounded hover:bg-opacity-90 transition'
				>
					Checkout
				</button>
			</div>
		</form>
	{% else %}
		<p class='text-lg text-gray-600'>Your cart is currently empty.</p>
	{% endif %}
</section>

{% schema %}
{
	"name": "Cart Page",
	"settings": [
		{
			"type": "color_scheme",
			"id": "color_scheme",
			"label": "Color scheme",
			"default": "scheme-1"
		}
	]
}
{% endschema %}
