<section class='container mx-auto px-4 py-10 color-{{ section.settings.color_scheme }}'>
	<div class='flex justify-between items-center mb-6'>
		<h1 class='text-3xl font-bold text-primary'>Your Cart</h1>
		<a href='/collections/all' class='text-sm font-semibold text-[var(--color-button)] hover:underline'>
			Continue Shopping â†’
		</a>
	</div>

	{% if cart.item_count > 0 %}
		<form action='/cart' method='post' novalidate>
			<cart-table>
				<table class='w-full text-left border-t border-gray-200 mb-6'>
					<thead>
						<tr class='text-sm text-gray-700 uppercase'>
							<th class='py-3'>Product</th>
							<th class='py-3'>Price</th>
							<th class='py-3'>Qty</th>
							<th class='py-3'>Total</th>
							<th class='py-3 text-right'>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for item in cart.items %}
							<tr class='border-t border-gray-100'>
								<td class='py-4'>
									<div class='flex items-center gap-4'>
										<a href='{{ item.url }}'>
											{% if item.image %}
												<img
													src='{{ item.image | image_url: width: 100 }}'
													alt='{{ item.product.title }}'
												>
											{% endif %}
										</a>
										<div>
											<a href='{{ item.url }}' class='font-semibold hover:underline text-primary'>
												{{ item.product.title }}
											</a>
											{% if item.variant.title != 'Default Title' %}
												<p class='text-sm text-gray-500'>{{ item.variant.title }}</p>
											{% endif %}
										</div>
									</div>
								</td>

								<td class='py-4'>{{ item.final_price | money }}</td>

								<td class='py-4'>
									<span>{{ item.quantity }}</span>
								</td>

								<td class='py-4'>{{ item.final_line_price | money }}</td>

								<td class='py-4 text-right space-x-3'>
									<cart-item-edit-button
										product-handle='{{ item.product.handle }}'
										variant-id='{{ item.variant.id }}'
										quantity='{{ item.quantity }}'
										line='{{ forloop.index }}'
									>
										<button class='text-blue-600 hover:underline text-sm cursor-pointer'>
											Edit
										</button>
									</cart-item-edit-button>

									<a
										href='/cart/change?line={{ forloop.index }}&quantity=0'
										class='text-red-500 hover:underline text-sm cursor-pointer'
										>Remove</a
									>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</cart-table>

			<!-- Order Summary -->
			<div class='w-full max-w-md ml-auto mb-6 bg-gray-50 p-4 rounded border border-gray-200'>
				<h2 class='text-lg font-bold mb-4'>Order Summary</h2>
				<div class='flex justify-between text-sm mb-2'>
					<span>Subtotal</span>
					<span>{{ cart.total_price | money }}</span>
				</div>
				{% if shop.taxes_included or shop.shipping_policy.body != blank %}
					<div class='text-sm text-gray-500 mb-2'>Taxes and shipping calculated at checkout.</div>
				{% endif %}
			</div>

			<!-- Update & Checkout -->
			<div class='flex justify-end items-center gap-4'>
				<button
					type='submit'
					name='checkout'
					class='bg-[var(--color-button)] text-[var(--color-button-label)] font-semibold py-3 px-6 rounded hover:bg-opacity-90 transition'
				>
					Checkout
				</button>
			</div>
		</form>
	{% else %}
		<p class='text-lg text-gray-600'>Your cart is currently empty.</p>
	{% endif %}
</section>

{% schema %}
{
	"name": "Cart Page",
	"settings": [
		{
			"type": "color_scheme",
			"id": "color_scheme",
			"label": "Color scheme",
			"default": "scheme-1"
		}
	]
}
{% endschema %}
