<section class='max-w-7xl mx-auto px-4 py-8 color-{{ section.settings.color_scheme }}'>
	{% if product %}
		<div class='grid grid-cols-1 md:grid-cols-2 gap-8 items-stretch min-h-[450px]'>
			<!-- Media Viewer -->
			<media-viewer class='block max-w-5xl mx-auto'>
				<!-- Main Media Viewer -->
				<div class='swiper main-swiper w-full h-[500px] rounded overflow-hidden'>
					<div class='swiper-wrapper h-full'>
						{% if product.media.size > 0 %}
							{% for media in product.media %}
								<div class='swiper-slide w-full h-full flex items-center justify-center bg-white'>
									{% case media.media_type %}
										{% when 'image' %}
											<img
												src='{{ media | image_url: width: 800 }}'
												alt='{{ media.alt | escape }}'
												class='max-h-full max-w-full object-contain'
											>
										{% when 'video' %}
											{{
												media
												| video_tag:
													class: 'max-h-full max-w-full object-contain',
													autoplay: false,
													controls: true
											}}
										{% when 'external_video' %}
											{{
												media
												| external_video_tag: class: 'max-h-full max-w-full object-contain'
											}}
										{% else %}
											<img
												src='{{ 'logo.png' | asset_url }}'
												alt='Default fallback'
												class='max-h-full max-w-full object-contain'
											>
									{% endcase %}
								</div>
							{% endfor %}
						{% endif %}
					</div>
				</div>

				<!-- Thumbnail Viewer -->
				{% if product.media.size > 0 %}
					<div class='swiper thumbs-swiper mt-4'>
						<div class='swiper-wrapper'>
							{% for media in product.media %}
								<div class='swiper-slide w-20 h-20 rounded overflow-hidden'>
									{% if media.media_type == 'image' %}
										<img
											src='{{ media | image_url: width: 120 }}'
											alt='Thumbnail {{ forloop.index }}'
											class='object-cover w-full h-full'
										>
									{% elsif media.preview_image %}
										<img
											src='{{ media.preview_image | image_url: width: 120 }}'
											alt='Preview thumbnail {{ forloop.index }}'
											class='object-cover w-full h-full'
										>
									{% endif %}
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}
			</media-viewer>

			<!-- Product Info + Form -->
			<product-info data-variants='{{ product.variants | json | escape }}' class='flex flex-col h-full'>
				{% form 'product', product %}
					<div class='flex flex-col justify-between h-full'>
						<div>
							<div class='my-3'>
								<span class='text-xs text-gray-500'>{{ product.vendor }}</span>
							</div>
							<div class='my-3'>
								<h1 class='text-3xl font-bold text-primary mb-2'>{{ product.title }}</h1>
							</div>
							<div class='my-3'>
								<span id='compareAtPrice' class='text-xl text-secondary mb-4 line-through'>
									{{ product.selected_or_first_available_variant.compare_at_price | money }}
								</span>
								<span id='regularPrice' class='text-xl text-secondary font-bold mb-4'>
									{{ product.selected_or_first_available_variant.price | money }}
								</span>
								{% if product.selected_or_first_available_variant.price
										< product.selected_or_first_available_variant.compare_at_price
								%}
									<span
										id='saleBadge'
										class='px-5 py-1 text-sm font-bold bg-red-500 rounded-full text-white mx-4'
									>
										Sale
									</span>
								{% else %}
									<span id='saleBadge' class='hidden'></span>
								{% endif %}
							</div>

							<div class='my-3 space-y-4'>
								{% unless product.has_only_default_variant %}
									{% for option in product.options_with_values %}
										<div class='mb-4'>
											<span class='block text-sm font-semibold mb-2'>{{ option.name }}</span>
											<div class='flex flex-wrap gap-2'>
												{% for value in option.values %}
													{% assign checked = false %}
													{% if forloop.first %}
														{% assign checked = true %}
													{% endif %}
													<label class='cursor-pointer'>
														<input
															type='radio'
															name='options[{{ option.name }}]'
															value='{{ value }}'
															class='sr-only'
															{% if checked %}
																checked
															{% endif %}
														>
														<span class='px-4 py-2 rounded bg-[var(--color-button)] text-[var(--color-button-label)] text-sm hover:opacity-90 transition'>
															{{ value }}
														</span>
													</label>
												{% endfor %}
											</div>
										</div>
									{% endfor %}
								{% endunless %}
							</div>

							<input type='hidden' name='id' value='{{ product.selected_or_first_available_variant.id }}'>
						</div>

						<div class='mt-auto space-y-3 pt-4'>
							<div id='purchaseActions' class='space-y-3'>
								<button
									id='addToCartBtn'
									type='submit'
									name='add'
									class='w-full bg-[var(--color-button)] text-[var(--color-button-label)] font-semibold py-3 rounded hover:bg-opacity-90 transition'
								>
									Add to Cart
								</button>
								{{ form | payment_button }}
							</div>

							<div
								id='soldOutMessage'
								class='h-[100px] flex items-center justify-center text-red-600 font-bold text-center bg-gray-100 rounded'
							>
								SOLD OUT
							</div>
						</div>
					</div>
				{% endform %}
			</product-info>
		</div>

		<div class='mt-12 prose prose-sm md:prose lg:prose-lg max-w-none text-gray-800'>
			{{ product.description }}
		</div>

	{% else %}
		<p class='text-subdued'>No product found.</p>
	{% endif %}
</section>

{% schema %}
{
	"name": "Product Section",
	"settings": [
		{
			"type": "color_scheme",
			"id": "color_scheme",
			"label": "Color scheme",
			"default": "scheme-1"
		}
	],
	"presets": [
		{
			"name": "Default Product"
		}
	]
}
{% endschema %}
