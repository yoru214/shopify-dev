<div class='color-{{ settings.color_scheme | default: 'scheme-1' }}'>
	<toast-notification>
		<div
			id='toast'
			class='hidden fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-3xl px-4 transition duration-300 ease-out opacity-0 -translate-y-8'
			style='background-color: var(--color-button); color: var(--color-button-label);'
		>
			<div
				id='toast-message'
				class='w-full px-8 py-5 rounded shadow-md font-medium whitespace-nowrap text-base text-center'
			>
				Toast message goes here
			</div>
		</div>
	</toast-notification>
</div>
{% schema %}
{
	"name": "Toast Notification",
	"settings": [],
	"presets": [
		{
			"name": "Toast Notification"
		}
	]
}
{% endschema %}
