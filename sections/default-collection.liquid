<section class='container mx-auto px-4 py-8 color-{{ section.settings.color_scheme }}'>
	<h1 class='text-3xl font-bold mb-4 text-primary'>{{ collection.title }}</h1>

	{% if collection.description != blank %}
		<div class='text-subdued mb-8'>
			{{ collection.description }}
		</div>
	{% endif %}

	<div class='grid grid-cols-1 md:grid-cols-4 gap-8'>
		<!-- Sidebar -->
		<aside class='md:col-span-1 space-y-6'>
			<dynamic-section>
				{% render 'collection-sidebar' %}
			</dynamic-section>
		</aside>

		<!-- Product Grid -->
		<div class='md:col-span-3'>
			<dynamic-section data-dynamic-url='{{ collection.handle }}'>
				{% render 'collection-content' %}
			</dynamic-section>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Collection",
	"settings": [
		{
			"type": "range",
			"id": "number_of_products_by_page",
			"label": "Number of products by name",
			"default": 8,
			"min": 4,
			"max": 24,
			"step": 2
		},
		{
			"type": "color_scheme",
			"id": "color_scheme",
			"label": "Color scheme",
			"default": "scheme-1"
		}
	],
	"presets": [
		{
			"name": "Collection Page"
		}
	]
}
{% endschema %}
