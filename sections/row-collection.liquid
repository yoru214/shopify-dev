<div class='container mx-auto px-4 py-10'>
	<h1 class='text-3xl font-bold mb-4 text-primary text-center py-10'>{{ section.settings.title }}</h1>
	<div class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-3 lg:grid-cols-6 gap-6'>
		{{ collections[section.settings.custom_collection] }} adad

		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {% for product in collections[section.settings.custom_collection].products limit: 3 %}
          {% render 'product-card', product: product %}
        {% endfor %}

        <!-- Show More as 4th item in the grid -->
        {% if collection.products.size > 3 %}
          <a
            href="{{ collection.url }}"
            class="relative block overflow-hidden shadow group hover:shadow-md h-full aspect-[3/4]"
          >
            {% if collection.image %}
              <img
                src="{{ collection.image | image_url: width: 600 }}"
                alt="{{ collection.title }}"
                class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 scale-100 group-hover:scale-115"
              >
              <div
                class="absolute inset-0 pointer-events-none"
                style="
                  background-color: {{ section.settings.overlay_color }};
                  opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
                "
              ></div>
            {% else %}
              <div
                class="absolute inset-0 w-full h-full bg-[var(--color-button)] opacity-[{{ section.settings.overlay_opacity | divided_by: 100.0 }}]"
              ></div>
            {% endif %}

            <div class="relative z-10 flex items-center justify-center h-full">
              <span class="text-white font-bold text-lg transition-transform duration-300 ease-in-out group-hover:scale-[1.7]">
                Show More
              </span>
            </div>
          </a>
        {% endif %}
      </div>
    </div>
		{% comment %} {% for product in collections[section.settings.custom_collection].products limit: 3 %}
			{% assign image = product.featured_image | default: collection.image %}

			<a
				href='{{ collection.url }}'
				class='block text-center group transition'
			>
				<div class='w-24 h-24 md:w-32 md:h-32 mx-auto rounded-full bg-white p-2 shadow-sm hover:shadow-md transition duration-300 flex items-center justify-center mb-4'>
					{% if image %}
						<img
							src='{{ image | image_url: width: 300 }}'
							alt='{{ product.title }}'
							class='max-w-full max-h-full object-contain transition duration-300 group-hover:scale-105'
							loading='lazy'
						>
					{% else %}
						<img
							src='{{ 'logo.png' | asset_url }}'
							alt='{{ product.title }} - Placeholder'
							class='max-w-full max-h-full object-contain opacity-50'
							loading='lazy'
						>
					{% endif %}
				</div>
			</a>
		{% endfor %} {% endcomment %}
	</div>
</div>

{% schema %}
{
	"name": "Collection Row",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Row Collection Name"
		},
		{
			"type": "collection",
			"id": "custom_collection",
			"label": "Select collection"
		},
		{
			"type": "color_scheme",
			"id": "color_scheme",
			"label": "Color scheme",
			"default": "scheme-1"
		}
	],
	"presets": [
		{
			"name": "Featured Collection Row"
		}
	]
}
{% endschema %}
