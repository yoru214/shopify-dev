<section class='w-full py-16' style='background-color: {{ section.settings.bg_color }}'>
	<div class='container mx-auto px-4'>
		<div class='max-w-xl mx-auto text-center text-white'>
			<h2 class='text-3xl font-bold mb-6'>{{ section.settings.heading }}</h2>
			<p class='mb-10'>{{ section.settings.subheading }}</p>

			{% form 'contact',
				id: 'contact-form',
				class: 'space-y-6 bg-white p-6 rounded-lg shadow-lg text-left text-gray-800'
			%}
				<input type='hidden' name='form_type' value='contact'>
				<input type='hidden' name='utf8' value='✓'>

				<div>
					<label for='ContactFormName' class='block text-sm font-medium mb-1'>Name</label>
					<input
						type='text'
						id='ContactFormName'
						name='contact[name]'
						required
						class='w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring focus:border-blue-300'
					>
				</div>

				<div>
					<label for='ContactFormEmail' class='block text-sm font-medium mb-1'>Email</label>
					<input
						type='email'
						id='ContactFormEmail'
						name='contact[email]'
						required
						class='w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring focus:border-blue-300'
					>
				</div>

				<div>
					<label for='ContactFormMessage' class='block text-sm font-medium mb-1'>Message</label>
					<textarea
						id='ContactFormMessage'
						name='contact[body]'
						rows='5'
						required
						class='w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring focus:border-blue-300'
					></textarea>
				</div>

				{% if form.errors %}
					<div class='text-red-600'>{{ form.errors | default_errors }}</div>
				{% endif %}

				{% if form.posted_successfully? %}
					<div class='text-green-600'>Thank you for contacting us. We'll get back to you soon.</div>
				{% endif %}

				<div>
					<button
						type='submit'
						class='w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded'
					>
						Send Message
					</button>
				</div>
			{% endform %}
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Contact Us",
	"tag": "section",
	"class": "contact-form-section",
	"settings": [
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color",
			"default": "#1a202c"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "Get in Touch"
		},
		{
			"type": "textarea",
			"id": "subheading",
			"label": "Subheading",
			"default": "We’d love to hear from you. Send us a message using the form below."
		}
	],
	"presets": [
		{
			"name": "Contact Us"
		}
	]
}
{% endschema %}
