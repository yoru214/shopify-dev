{% if selected_collection and selected_collection.products_count > 0 %}
	<p>Products count: {{ selected_collection.products_count }}</p>
	<p>Collection title: {{ selected_collection.title }}</p>
	<p>Collection handle: {{ section.settings.custom_collection }}</p>

	{% paginate selected_collection.products by settings.number_of_products_by_page %}
		<div class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6'>
			{% for product in paginate.items %}
				{% render 'product-card', product: product %}
			{% endfor %}

			{% for product in paginate.items %}
				<p>{{ product.title }}</p>
			{% endfor %}
		</div>

		<div class='mt-10'>
			{% render 'pagination', pagination: paginate %}
		</div>
	{% endpaginate %}
{% elsif selected_collection %}
	<p class='text-subdued text-center m-25'>No products found in this collection.</p>
{% else %}
	<p class='text-subdued text-center'>No collection selected.</p>
{% endif %}
